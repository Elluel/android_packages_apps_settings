<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/lichti_tweaks_title" >

    <!-- Notifications -->
    <PreferenceCategory
            android:title="@string/ras_notification_category">

            <PreferenceScreen
                    android:title="@string/heads_up_title"
                    android:summary="@string/heads_up_summary">

                    <CheckBoxPreference
                            android:key="heads_up_expanded"
                            android:title="@string/heads_up_expanded_title"
                            android:summary="@string/heads_up_expanded_summary"
                            android:persistent="false"
                            android:defaultValue="false" />

                    <CheckBoxPreference
                            android:key="heads_up_show_update"
                            android:title="@string/heads_up_show_updates_title"
                            android:summary="@string/heads_up_show_updates_summary"
                            android:persistent="false"
                            android:defaultValue="false" />

                    <CheckBoxPreference
                            android:key="heads_up_gravity"
                            android:title="@string/heads_up_gravity_title"
                            android:summary="@string/heads_up_gravity_summary"
                            android:persistent="false"
                            android:defaultValue="false" />

                    <ListPreference
                            android:key="heads_up_snooze_time"
                            android:title="@string/heads_up_snooze_title"
                            android:entries="@array/heads_up_snooze_entries"
                            android:entryValues="@array/heads_up_snooze_values"
                            android:persistent="false" />

                    <ListPreference
                            android:key="heads_up_time_out"
                            android:title="@string/heads_up_time_out_title"
                            android:entries="@array/heads_up_time_out_entries"
                            android:entryValues="@array/heads_up_time_out_values"
                            android:persistent="false" />
            </PreferenceScreen>
    </PreferenceCategory>

    <!-- Appcircle Sidebar -->
    <PreferenceCategory
            android:key="@string/ras_app_circle_bar_category"
            android:title="@string/ras_app_circle_bar_title">

            <PreferenceScreen
                    android:id="@+id/app_circle_sidebar"
                    android:title="@string/app_circle_bar_title"
                    android:summary="@string/app_circle_sidebar_summary_real"
                    android:fragment="com.android.settings.rascarlo.AppCircleSidebar" />
    </PreferenceCategory>

    <!-- Miui style carrier in statusbar -->
    <PreferenceCategory
            android:title="@string/status_bar_carrier_category">

            <PreferenceScreen
                    android:title="@string/ras_carrier_title"
                    android:summary="@string/ras_carrier_summary">

                    <CheckBoxPreference
                            android:key="status_bar_carrier"
                            android:title="@string/show_status_bar_carrier_title"
                            android:summary="@string/show_status_bar_carrier_summary"
                            android:defaultValue="false" />

                    <net.margaritov.preference.colorpicker.ColorPickerPreference
                            android:key="status_bar_carrier_color"
                            android:title="@string/status_bar_carrier_color"
                            android:defaultValue="0xffffffff"
                            android:dependency="status_bar_carrier" />
            </PreferenceScreen>
    </PreferenceCategory>

    <!-- Lockscreen Tweaks -->
    <PreferenceCategory
            android:title="@string/ras_lockscreen_category">

            <PreferenceScreen
                    android:key="ras_lockscreen_category"
                    android:title="@string/ras_lockscreen_title"
                    android:summary="@string/ras_lockscreen_summary">

                    <CheckBoxPreference
                            android:key="lockscreen_enable_power_menu"
                            android:title="@string/lockscreen_enable_power_menu_title"
                            android:summary="@string/lockscreen_enable_power_menu_summary"
                            android:persistent="false" />

                    <CheckBoxPreference
                            android:key="lockscreen_see_through"
                            android:title="@string/lockscreen_see_through_title"
                            android:summary="@string/lockscreen_see_through_summary"
                            android:persistent="false" />

                    <com.android.settings.rascarlo.SeekBarPreference
                            android:key="lockscreen_blur_radius"
                            android:title="@string/blur_radius_title"
                            android:summary="@string/blur_radius_summary"
                            android:max="25"
                            settings:min="0"
                            settings:unitsLeft=""
                            settings:unitsRight=""
                            android:dependency="lockscreen_see_through"
                            android:persistent="false" />

                    <CheckBoxPreference
                            android:key="battery_around_lockscreen_ring"
                            android:title="@string/battery_around_lockscreen_ring"
                            android:persistent="false"/>
            </PreferenceScreen>
    </PreferenceCategory>

    <!-- Privacy Guard and Wakelockblocker -->
    <PreferenceCategory
            android:title="@string/ras_security_category">

            <PreferenceScreen
                    android:key="ras_security_category"
                    android:title="@string/ras_security_title"
                    android:summary="@string/ras_security_summary">

                    <PreferenceScreen
                            android:fragment="com.android.settings.slim.privacyguard.PrivacyGuardManager"
                            android:title="@string/privacy_guard_manager_title"
                            android:id="@+id/privacy_guard_manager" />

                    <PreferenceScreen
                            android:key="wakelock_blocker"
                            android:fragment="com.android.settings.rascarlo.WakeLockBlocker"
                            android:title="@string/wakelock_blocker" />
            </PreferenceScreen>
    </PreferenceCategory>

    <!-- Touch Control Kernel Tweaks -->
    <PreferenceCategory
            android:title="@string/ras_touchcontrol_category">

            <PreferenceScreen
                    android:key="touch_control_settings"
                    android:title="@string/touch_control_settings_title"
                    android:summary="@string/touch_control_settings_summary">
                    <intent
                            android:action="com.mahdi.action.LAUNCH_TOUCH_CONTROL_SETTINGS"
                            android:targetPackage="com.mahdi.touchcontrol"
                            android:targetClass="com.mahdi.touchcontrol.settings.TouchControlActivity" />
            </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>
