<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/lichti_tweaks_title" >

    <!-- Tinted statusbar and navbar-->
    <PreferenceCategory
            android:key="category_tinted_statusbar"
            android:title="@string/tinted_statusbar_category">

            <PreferenceScreen
                    android:title="@string/tinted_statusbar_title"
                    android:summary="@string/tinted_statusbar_summary">

                    <ListPreference
                            android:key="tinted_statusbar"
                            android:title="@string/title_tinted_statusbar"
                            android:entries="@array/tinted_statusbar_entries"
                            android:entryValues="@array/tinted_statusbar_values"
                            android:defaultValue="0"
                            android:persistent="false" />

                    <ListPreference
                            android:key="tinted_statusbar_option"
                            android:title="@string/title_tinted_statusbar_option"
                            android:entries="@array/tinted_statusbar_option_entries"
                            android:entryValues="@array/tinted_statusbar_values"
                            android:defaultValue="0"
                            android:persistent="false" />

                    <CheckBoxPreference
                            android:key="status_bar_tinted_filter"
                            android:title="@string/tinted_statusbar_filter_title"
                            android:summary="@string/tinted_statusbar_filter_summary" />

                    <com.android.settings.rascarlo.SeekBarPreference
                            android:key="tinted_statusbar_transparent"
                            android:persistent="false"
                            android:title="@string/tinted_statusbar_transparent_title"
                            android:max="100"
                            settings:min="0"
                            settings:unitsLeft=""
                            settings:unitsRight="%" />

                    <com.android.settings.rascarlo.SeekBarPreference
                            android:key="tinted_navbar_transparent"
                            android:persistent="false"
                            android:title="@string/tinted_navbar_transparent_title"
                            android:max="100"
                            settings:min="0"
                            settings:unitsLeft=""
                            settings:unitsRight="%" />
            </PreferenceScreen>
    </PreferenceCategory>

    <!-- Notifications -->
    <PreferenceCategory
            android:title="@string/ras_notification_category">

            <PreferenceScreen
                    android:fragment="com.android.settings.rascarlo.HeadsUp"
                    android:key="heads_up"
                    android:title="@string/heads_up_title"
                    android:summary="@string/heads_up_summary" />

            <PreferenceScreen
                    android:fragment="com.android.settings.LockscreenNotifications"
                    android:title="@string/lockscreen_notifications"
                    android:summary="@string/lockscreen_notifications_summary" />  

    </PreferenceCategory>

    <!-- Appcircle Sidebar -->
    <PreferenceCategory
            android:key="@string/ras_app_circle_bar_category"
            android:title="@string/ras_app_circle_bar_title">

            <PreferenceScreen
                    android:id="@+id/app_circle_sidebar"
                    android:title="@string/app_circle_bar_title"
                    android:summary="@string/app_circle_sidebar_summary_real"
                    android:fragment="com.android.settings.rascarlo.AppCircleSidebar" />
    </PreferenceCategory>

    <!-- Miui style carrier in statusbar -->
    <PreferenceCategory
            android:title="@string/status_bar_carrier_category">

            <PreferenceScreen
                    android:title="@string/ras_carrier_title"
                    android:summary="@string/ras_carrier_summary">

                    <com.android.settings.rascarlo.CustomCarrier
                            android:key="notification_custom_carrier_label"
                            android:title="@string/notification_custom_carrier_label_title"
                            android:dialogTitle="@string/notification_custom_carrier_label_title"
                            android:positiveButtonText="@string/wifi_save"
                            android:negativeButtonText="@string/wifi_cancel"
                            android:selectAllOnFocus="true"
                            android:imeOptions="actionDone"
                            android:inputType="textNoSuggestions"
                            android:persistent="false" />

                    <CheckBoxPreference
                            android:key="status_bar_carrier"
                            android:title="@string/show_status_bar_carrier_title"
                            android:summary="@string/show_status_bar_carrier_summary"
                            android:defaultValue="false" />

                    <net.margaritov.preference.colorpicker.ColorPickerPreference
                            android:key="status_bar_carrier_color"
                            android:title="@string/status_bar_carrier_color"
                            android:defaultValue="0xffffffff"
                            android:dependency="status_bar_carrier" />
            </PreferenceScreen>
    </PreferenceCategory>

    <!-- Lockscreen Tweaks -->
    <PreferenceCategory
            android:title="@string/ras_lockscreen_category">

            <PreferenceScreen
                    android:key="ras_lockscreen_category"
                    android:title="@string/ras_lockscreen_title"
                    android:summary="@string/ras_lockscreen_summary">

                    <CheckBoxPreference
                            android:key="lockscreen_enable_power_menu"
                            android:title="@string/lockscreen_enable_power_menu_title"
                            android:summary="@string/lockscreen_enable_power_menu_summary"
                            android:persistent="false" />

                    <CheckBoxPreference
                            android:key="lockscreen_see_through"
                            android:title="@string/lockscreen_see_through_title"
                            android:summary="@string/lockscreen_see_through_summary"
                            android:persistent="false" />

                    <com.android.settings.rascarlo.SeekBarPreference
                            android:key="lockscreen_blur_radius"
                            android:title="@string/blur_radius_title"
                            android:summary="@string/blur_radius_summary"
                            android:max="25"
                            settings:min="0"
                            settings:unitsLeft=""
                            settings:unitsRight=""
                            android:dependency="lockscreen_see_through"
                            android:persistent="false" />

                    <CheckBoxPreference
                            android:key="battery_around_lockscreen_ring"
                            android:title="@string/battery_around_lockscreen_ring"
                            android:persistent="false"/>
            </PreferenceScreen>
    </PreferenceCategory>

    <!-- Privacy Guard and Wakelockblocker -->
    <PreferenceCategory
            android:title="@string/ras_security_category">

            <PreferenceScreen
                    android:key="ras_security_category"
                    android:title="@string/ras_security_title"
                    android:summary="@string/ras_security_summary">

                    <PreferenceScreen
                            android:fragment="com.android.settings.slim.privacyguard.PrivacyGuardManager"
                            android:title="@string/privacy_guard_manager_title"
                            android:id="@+id/privacy_guard_manager" />

                    <PreferenceScreen
                            android:key="wakelock_blocker"
                            android:fragment="com.android.settings.rascarlo.WakeLockBlocker"
                            android:title="@string/wakelock_blocker" />
            </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>
